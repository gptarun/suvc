<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
    android:layout_margin="1dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white_smoke"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:weightSum="10"
      android:layout_margin="4dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/document_name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_margin="4dp"
        android:text="Placement Drive"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

      <RadioGroup
        android:id="@+id/radio_group"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RadioButton
          android:id="@+id/radio_button_red"
          android:buttonTint="@color/red"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
        <RadioButton
          android:id="@+id/radio_button_yellow"
          android:buttonTint="@android:color/holo_orange_light"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
        <RadioButton
          android:id="@+id/radio_button_green"
          android:buttonTint="@color/lawn_green"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      </RadioGroup>

      <ImageView
        android:id="@+id/updateStatusButton"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:tint="@color/royal_blue"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</LinearLayout>